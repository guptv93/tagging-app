{{>layout/header}}
<div class="container bg-light p-5">
  <h1 class="my-font text-center"> Start Tagging! <i class="fa fa-tags" aria-hidden="true"> </i></h1>
  <br/>

  <h3 class="my-font text-center"> Folder Name : <span id="folder-name" class="text-secondary my-capitalize">{{folderName}}</span></h3>
  <h3 class="my-font text-center"> Image Index : <span id="image-index" class="text-secondary">{{imageIndex}}</span></h3>

  <!-- UserID Div -->
  <div id="user-id-div" class="row justify-content-center mt-2">
    <div  class="input-group col-md-2">
      <input id="user-id-input" type="text" class="form-control" placeholder="NetID">
      <div class="input-group-append">
        <span class="input-group-text" id="basic-addon2">@nyu</span>
      </div>
    </div>
  </div>

  <!-- Help and Thumbnail Button -->
  <div id="back-button-div" class="row justify-content-center mt-2">
    <div class="btn-group">
      <a id="thumbnail-button" href="/thumbnails/{{folderName}}/{{imageIndex}}" class="btn btn-secondary">
        <i class="fa fa-th" aria-hidden="true"></i>
      </a>
      <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#help-modal">
        <i class="fa fa-info" aria-hidden="true"></i>
      </button>
    </div>
  </div>
  <div class="modal fade" id="help-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Instructions</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Use Right and Left arrows just for navigation. Only the Submit Button will actually tag the images.
          <br/><br/>
          Happy Tagging :)
        </div>
      </div>
    </div>
  </div>

  <!-- Images Div -->
  <div id="image-div" class="row mt-4">
    <div id="prev" class="col-md-4 text-center my-arrow-parent">
      <a href="#">
        <i class="fa fa-chevron-left my-arrow" aria-hidden="true"></i>
      </a>
    </div>
    <div class=" col-md-4 text-center">
      <img id="my-img" class="d-none"/>
    </div>
    <div id="next" class="col-md-4 text-center my-arrow-parent">
      <a href="#">
        <i class="fa fa-chevron-right my-arrow" aria-hidden="true"></i>
      </a>
    </div>
  </div>

  <!-- Submit Button -->
  <div id="submit-div" class="row justify-content-center mt-2">
    <div  class="input-group col-md-2">
      <button id="submit-button" type="button" class="btn btn-primary btn-block">Submit <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
    </div>
  </div>

  <!-- Display Tags Div -->
  <div id="display-tags-div" class="row justify-content-center mt-2">
    <div  class="input-group col-md-4">
      <div class="input-group-prepend">
        <span class="btn btn-secondary">Tags:</span>
      </div>
      <input id="display-tags-input" type="text" class="form-control" disabled>
    </div>
  </div>

  <!--Tags Div-->
  <div id="tags-div">
  </div>

</div>
  {{>layout/footer}}
